<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".presentation.comparison.institutionInfoComparison.InstitutionInfoComparison">
        <Button
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/btnCharacteristic"
                android:background="@color/ThemeYellow"
                android:text="Характеристика"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
        <androidx.recyclerview.widget.RecyclerView
                app:layout_goneMarginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/btnCharacteristic"
                android:id="@+id/characteristic"
                tools:listitem="@layout/item_institution_characteristic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
            ></androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>